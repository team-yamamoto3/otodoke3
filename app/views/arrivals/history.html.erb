 <h1>商品入荷履歴</h1>
  <%= link_to '在庫確認へ', cd_arrivals_path(@cds) %>
   <table class="table table-hover">
    <thead>
     <tr>
      <th>商品追加数</th>
      <th>商品追加日時</th>
      <th>CDのID</th>
      <th>CDタイトル</th>
     </tr>
    </thead>
    <tbody>
     <% @arrivals.each do |a| %>
      <tr>
       <td><%= a.arrival_new %>枚追加</td>
       <td><%= a.arrival_day %></td>
       <td>ID<%= a.cd_id %></td>
       <td><%= a.cd&.title %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
   <%= paginate(@arrivals) %>
