
	<table>
	  <%= search_form_for @q do |f| %>
	    <%= f.search_field :title_cont %>
        <button class="btn btn-default" type="submit">
      <i class='glyphicon glyphicon-search'></i>
    </button>
	  <% end %>
    </table>

  <div id="container">
    <div id="theTarget">
	  <div class="image1"></div>
	  <div class="image2"></div>
	  <div class="image3"></div>
	</div>
  </div>

 <div class="center-cd class=clearfix">
    <% @cds.each do |cd| %>
        <div class="center-table align=left">
		    <table>
			     <tr>
					 <td>
					 	<%= attachment_image_tag cd, :jacket, :fill, 250, 250, fallback: "no_cd_image_fill250.png" %>
					 </td>
					<td><b><%= cd.title %></b></td>
					<td><%= cd.label %></td>
					  <td><h4>¥<%= cd.price %></h4></td>
					<td height="15">
					  <% if cd.stock == 0 %>
					    <p>売り切れ</p>
					  <% else %>
					    <%= cd.sales_status %>
					</td>
			          <% end %>
					<td><%= link_to "CD詳細へ", cd_path(cd.id) %></td>
			    </tr>
		    </table>
		</div>
	<% end %>
 </div>
		　　　　　　　　　　　　　<br>
	<%= paginate(@cds) %>

<script>
   $(document).ready(function () {
  $("#theTarget").skippr({
      // スライドショーの変化
      transition : 'slide',
      // 変化に係る時間(ミリ秒)
      speed : 1000,
      // easingの種類
      easing : 'easeOutQuart',
      // ナビゲーションの形
      navType : 'block',
      childrenElementType : 'div',
      // ナビゲーション矢印の表示
      arrows : true,
      // スライドショーの自動再生
      autoPlay : true,
      // 自動再生時のスライド切替間隔
      autoPlayDuration : 3000,
      // キーボードの矢印キーによるスライド送りの設定
      keyboardOnAlways : true,
      // 一枚目のスライド表示時に戻る矢印を表示するかどうか
      hidePrevious : false
  });
});
</script>

