
<h1>商品詳細</h1>
<%= attachment_image_tag @cd, :jacket, :fill, 300, 300, fallback: "no_cd_image.png" %>
<%= @cd.title %>
<p>¥<%= @price.floor %>（税込）</p>
<%= @cd.artist_id %>


<%=form_for @cart, url: cd_carts_path(@cd.id)  do |f| %>
<%= f.hidden_field :cartnumber, value: 1 %>
<%= f.hidden_field :cd_id, value: @cd.id %> 
<%= f.submit 'カートに入れる' %>
<% end %>