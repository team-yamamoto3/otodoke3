
<h1>商品詳細</h1>
<%= attachment_image_tag @cd, :jacket, :fill, 300, 300, fallback: "no_cd_image.png" %>


<h3>¥<%= @price.floor %>（税込）</h3>
<h4>タイトル</h4>
  <%= @cd.title %>

<h4>アーティスト</h4>
<% @cd.artists.each do |artist| %>
 <%= artist.artist %>
<% end %>
<h4>レーベル</h4>
  <%= @cd.label %>
<h4>ジャンル</h4>
  <%= @cd.genre %>
<h4>販売ステータス</h4>
  <% if @cd.stock == 0 %>
  <h4>売り切れ</h4>
  <% else %>
  <%= @cd.sales_status %>
<% end %>
<h4>ディスク</h4>
  <% @cd.discs.each do |disc| %>
  <%= disc.disc_name %>
  <%= disc.include %>
  <%= disc.disc_number %>
<% disc.songs.each do |song| %>
  <%= song.song %>
  <%= song.songorder %>
<% end %>
<% end %>

<%=form_for @cart, url: cd_carts_path(@cd.id)  do |f| %>
<%= f.hidden_field :cartnumber, value: 1 %>
<%= f.hidden_field :cd_id, value: @cd.id %>
<%= f.submit 'カートに入れる' %>
<% end %>

