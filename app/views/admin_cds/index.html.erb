<h1>CD一覧</h1>

<p>CDタイトル検索</p>
<table>
	<%= search_form_for @q do |f| %>
    <%= f.label :title_cont %>
    <%= f.search_field :title_cont %>

    <%= f.submit %>
<% end %>
</table>

<div class="center-cd">
 <% @cds.each do |cd| %>
    <h4>ジャケット</h4>
      <%= link_to admin_cd_path(cd.id) do %>
        <%= attachment_image_tag cd, :jacket, :fill, 300, 300, fallback: "no_cd_image.png" %>
      <% end %>
	<h4>タイトル</h4>
	 <%= cd.title %>
	<h4>アーティスト</h4>
	<% cd.artists.each do |artist| %>
	 <%= artist.artist %>
	<% end %>
	<h4>レーベル</h4>
	 <%= cd.label %>
	<h4>ジャンル</h4>
	 <%= cd.genre %>
	<h4>販売ステータス</h4>
	 <%= cd.sales_status %>
	<h4>値段</h4>
	 <%= cd.price %>
	<h4>消費税</h4>
	 <%= cd.consumption_tax %>
	<h4>ディスク</h4>
	 <% cd.discs.each do |disc| %>
	  <%= disc.disc_name %>
	  <%= disc.include %>
	  <%= disc.disc_number %>
	 <% disc.songs.each do |song| %>
	  <%= song.song %>
	  <%= song.songorder %>
	 <% end %>
	<% end %>
	<%= link_to "CD詳細へ", admin_cd_path(cd.id) %>
	<div class="between"></div>
	<% end %>
	<br>
		<%= paginate(@cds) %>
</div>