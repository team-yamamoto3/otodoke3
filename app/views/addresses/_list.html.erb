<table>
  <h2>送付先情報登録(３つまで)</h2>
  <%= form_for(@new_address, url: enduser_addresses_path) do |f| %>
    <h4>送付先住所</h4>
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, autofocus: true %>
      </div>

    <div class="field">
      <%= f.label :送付先住所 %><br />
      <%= f.text_field :address, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :tell, autofocus: true %>
    </div>

    <%= f.submit '送付先新規作成', :class => 'btn btn-primary' %>
  <% end %>

</table>