<h1>ユーザー編集画面</h1>

<%= form_for(@enduser) do |f| %>
  <div class="form-group has-icon">

  <!-- 氏名（漢字・カナ） -->
　<div class="field">
      <%= f.label :氏 %><br />
      <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :氏（かな） %><br />
      <%= f.text_field :last_name_kana, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :名（かな） %><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <!-- 郵便番号 -->
  <div class="field">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <!-- 住所 -->
  <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :user_address, autofocus: true %>
  </div>

  <!-- 電話番号 -->
  <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :user_tell, autofocus: true %>
  </div>

  <!-- メールアドレス -->
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!--パスワード-->
