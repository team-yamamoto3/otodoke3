<h1>ユーザー編集画面</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- 氏名（漢字・カナ） -->
　<div class="field">
      <%= f.label :氏 %><br />
      <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :氏（かな） %><br />
      <%= f.text_field :last_name_kana, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :名（かな） %><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <!-- 郵便番号 -->
  <div class="field">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <!-- 住所 -->
  <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :user_address, autofocus: true %>
  </div>

  <!-- 電話番号 -->
  <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :user_tell, autofocus: true %>
  </div>

  <!-- メールアドレス -->
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!--パスワード-->
  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワードを入力ください %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Enduser" %>
  </div>

<% end %>

<%= render "endusers/shared/links" %>


<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
